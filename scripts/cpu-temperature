#!/usr/bin/env bash

temp=$(echo "$(grep -E 'Tctl|Tdie|Package id' /sys/class/hwmon/hwmon*/temp*_label | head -n1 | cut -d':' -f1 | sed 's/label/input/' | xargs cat)")

# Following script outputs current cpu die temperature in milidegree-celcius, convert it to celcius and fahrenheit and display as:
#
# Celcius: 42.0 C
# Fahrenheit: 107.6 F

cel=$(echo "$temp / 1000" | bc)
echo "$cel C"

far=$(echo "$cel * 9" | bc)
far=$(echo "$far / 5" | bc)
far=$(echo "$far + 32" | bc)

echo "$far F"
